# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Force specific files to always use LF
*.py text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.wav binary
*.mp3 binary
*.ico binary
*.ttf binary
*.woff binary
*.woff2 binary

# Windows specific files should use CRLF
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf
